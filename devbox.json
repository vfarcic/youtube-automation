{
  "packages": [
    "just@1.43.1",
    "git@2.51.2",
    "nushell@0.108.0",
    "vals@0.42.6"
  ],
  "shell": {
    "init_hook": [
      "export PATH=\"$HOME/.local/bin:$PATH\"",
      "[ -n \"$USE_VALS\" ] && eval \"$(vals env -export -f .env.vals.yaml)\" || true",
      "[ -f .env ] && source .env || true"
    ],
    "scripts": {
      "build": ["just build"],
      "run":   ["just run"]
    }
  }
}
