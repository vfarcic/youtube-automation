{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "provider": {
    "google": {
      "models": {
        "gemini-3.0-pro": {
          "id": "gemini-3.0-pro"
        }
      }
    }
  },
  "mcp": {
    "dot-ai": {
      "type": "local",
      "enabled": true,
      "command": [
        "docker",
        "compose",
        "-f",
        "docker-compose-dot-ai.yaml",
        "run",
        "--rm",
        "--remove-orphans",
        "dot-ai"
      ]
    }
  }
}
